# .env for local FastAPI development
# App configuration
APP_NAME=NIDS
DEBUG=True
SECRET_KEY=mysecretkey
ENVIRONMENT=local

# PostgreSQL Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nids_db
DB_USER=nids_user
DB_PASSWORD=change_this_in_production
DATABASE_URL=postgresql+psycopg://nids_user:change_this_in_production@localhost:5432/nids_db

# Database Admin credentials (for DB setup)
DB_ADMIN_USER=
DB_ADMIN_PASSWORD=

# Email Configuration
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_FROM=your_email@gmail.com
MAIL_FROM_NAME="NIDS System"
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True
VALIDATE_CERTS=True
SUPPORT_EMAIL=support@yourdomain.com

# PGAdmin configuration
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin

# Redis configuration
REDIS_URL=redis://redis:6379/0

# Frontend configuration
FRONTEND_URL=http://localhost:3000

# CORS configuration
BACKEND_CORS_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000"]'
