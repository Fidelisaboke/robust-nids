# .env.test for test database configuration
# Copy this file to .env.test and adjust values as needed

APP_NAME=NIDS
DEBUG=False
SECRET_KEY=testsecretkey
ENVIRONMENT=test

# PostgreSQL Test Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nids_test_db
DB_USER=nids_user
DB_PASSWORD=change_this_in_production
DATABASE_URL=postgresql+psycopg://nids_user:change_this_in_production@localhost:5432/nids_test_db

# Database admin credentials (set to your default admin values - probably postgres)
DB_ADMIN_USER=
DB_ADMIN_PASSWORD=

# Email Configuration
MAIL_USERNAME=test@example.com
MAIL_PASSWORD=password
MAIL_FROM=test@example.com
MAIL_FROM_NAME="NIDS System"
MAIL_PORT=1025
MAIL_SERVER=localhost
MAIL_STARTTLS=False
MAIL_SSL_TLS=False
USE_CREDENTIALS=False
VALIDATE_CERTS=False
SUPPORT_EMAIL=test@example.com

# PgAdmin configuration
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin

# Redis configuration
REDIS_URL=redis://localhost:6379/1

# CORS configuration
BACKEND_CORS_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000"]'
